<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="test">
        <description>
            Persistence unit for the Jakarta Persistence tutorial of the Hibernate Getting Started Guide
        </description>

        <class>by.it_academy.jd2.entites.manytomany.VoteEntity</class>
        <class>by.it_academy.jd2.entites.manytomany.GenreEntity</class>

        <class>by.it_academy.jd2.entites.onetomany.VoteEntityOneMany</class>
        <class>by.it_academy.jd2.entites.onetomany.GenreEntityOneMany</class>

        <class>by.it_academy.jd2.entites.onetoone.VoteEntityOne</class>
        <class>by.it_academy.jd2.entites.onetoone.GenreEntityOne</class>

        <properties>
            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
        </properties>

    </persistence-unit>

</persistence>